{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "farhansajid2/multi-client",
      "hostname": "client",
      "essential": false

    },
    {
      "name": "server",
      "image": "farhansajid2/multi-server",
      "hostname": "api",
      "essential": false

    },
     {
      "name": "worker",
      "image": "farhansajid2/multi-worker",
      "hostname": "worker",
      "essential": false
    },
     {
      "name": "nginx",
      "image": "farhansajid2/multi-nginx",
      "hostname": "nginx",
      "essential": true,
       "portMappings": [
         {
           "hostPort": 80,
           "containerPort": 80
         }
       ],
       "links": ["server", "client"]

    }




  ]

}